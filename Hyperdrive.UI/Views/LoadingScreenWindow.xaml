<Window x:Class="Hyperdrive.UI.Views.LoadingScreenWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Hyperdrive.UI.Views"
        DataContext="{RelativeSource Self}"
        mc:Ignorable="d"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterOwner"
        Title="{Binding windowTitle}" Height="145" Width="500">

    <Border Background="{StaticResource BackgroundDarkBrush}">
        <Grid Margin="15 15 15 10" >
            <Grid.RowDefinitions>
                <RowDefinition Height="25" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <ProgressBar Grid.Row="0" Minimum="0" Maximum="{Binding maxProgress}" Value="{Binding currentProgress}" Name="pbStatus" />
            <TextBlock Grid.Row="0" Text="{Binding progressAsString}" HorizontalAlignment="Center" VerticalAlignment="Center" Visibility="{Binding textVisibility}" />

            <Button Click="Button_Click" Grid.Row="1" Content="Cancel" Height="30" HorizontalAlignment="Right" Margin="0 15 0 0" Padding="5 2 5 5" VerticalContentAlignment="Center" />
        </Grid>
    </Border>
</Window>
